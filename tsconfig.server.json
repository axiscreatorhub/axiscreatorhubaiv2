{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist-server",
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["server.ts", "server/**/*", "prisma/**/*"],
  "exclude": ["src", "dist", "node_modules"]
}
